<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/cardViewLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/paletteWhite"
    android:orientation="vertical"
    android:paddingTop="12dp"
    android:layout_marginBottom="18dp"
    android:textDirection="rtl"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layoutDirection="rtl"
        android:background="@drawable/background__border"
        android:layout_margin="8dp"
        android:padding="8dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="12"
            >
            <ImageButton
                android:id="@+id/dropDownButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_keyboard_arrow_down_black_24dp"
                android:tint="@color/paletteWhite"
                android:background="@drawable/background__red_circle"
                android:layout_weight="0.1"
                android:minWidth="40dp"
                android:minHeight="40dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="16sp"
            android:text="عنوان الدرس : "
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:paddingHorizontal="8dp"
            android:gravity="center"
            android:layout_weight="1"/>
        <EditText
            android:id="@+id/lecture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@android:color/transparent"
            android:textDirection="rtl"
            android:inputType="textMultiLine"
            android:autofillHints="@string/app_name"
            android:textColor="@color/colorPrimaryDark"
            android:textColorHint="@color/colorPrimary"
            android:paddingHorizontal="4dp"
            android:textSize="19sp"
            android:layout_weight="10.8"
            />
            <ImageButton
                android:id="@+id/removeLecture"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/ic_remove_black_24dp"
                android:layout_gravity="center_vertical"
                android:tint="@color/paletteWhite"
                android:background="@drawable/background__red_circle"
                android:layout_weight="0.1"
                android:minWidth="40dp"
                android:minHeight="40dp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/dropDownMenu"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:visibility="invisible"
            >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="4dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="التاريخ : "
                android:textColor="@color/colorPrimaryDark"
                android:textStyle="bold"
                android:layout_marginTop="12dp"/>
            <EditText
                android:id="@+id/lectureDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@android:color/transparent"
                android:textDirection="rtl"
                android:inputType="datetime"
                android:autofillHints="@string/app_name"
                android:textColor="@color/colorPrimaryDark"
                android:textColorHint="@color/colorPrimary"
                android:textSize="19sp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="4dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="الأيه : "
                android:textColor="@color/colorPrimaryDark"
                android:textSize="16sp"
                android:textStyle="bold" />
            <EditText
                android:id="@+id/quote"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@android:color/transparent"
                android:textDirection="rtl"
                android:inputType="textMultiLine"
                android:autofillHints="@string/app_name"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="19sp"
                android:textColorHint="@color/colorPrimary"
                />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="4dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="ملاحظات : "
                android:textColor="@color/colorPrimaryDark"
                android:textStyle="bold"/>
            <EditText
                android:id="@+id/lectureNotes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/background__border"
                android:paddingHorizontal="12dp"
                android:paddingVertical="8dp"
                android:enabled="false"
                android:textDirection="rtl"
                android:inputType="textMultiLine"
                android:autofillHints="@string/app_name"
                android:textSize="19sp"
                android:textColor="@color/colorPrimaryDark"
                android:textColorHint="@color/colorPrimary"
                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left">
            <Button
                android:id="@+id/saveLecture"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginHorizontal="8dp"
                android:layout_marginBottom="18dp"
                android:background="@drawable/background__red_circle"
                android:backgroundTint="@color/colorAccent2"
                android:elevation="8dp"
                android:paddingHorizontal="48dp"
                android:layout_marginTop="12dp"
                android:text="حفظ"
                android:textColor="@color/paletteWhite"
                android:textSize="20sp" />
            </RelativeLayout>
        </LinearLayout>

    </LinearLayout>

    </LinearLayout>
</LinearLayout>