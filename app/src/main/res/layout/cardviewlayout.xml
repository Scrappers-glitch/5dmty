<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/cardViewLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/paletteWhite"
    android:orientation="vertical"
    android:paddingTop="12dp"
    android:layout_marginBottom="18dp"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layoutDirection="rtl"
        android:background="@drawable/background__border"
        android:layout_margin="8dp"
        android:padding="8dp">
        <ImageButton
            android:id="@+id/removeLecture"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginBottom="24dp"
            android:src="@drawable/ic_remove_black_24dp"
            android:tint="@color/paletteWhite"
            android:background="@drawable/background__red_circle"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="4dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="16sp"
                android:text="عنوان الدرس : "
                android:textColor="@color/colorPrimaryDark"
                android:textStyle="bold"
                android:layout_marginTop="12dp"/>
            <EditText
                android:id="@+id/lecture"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@android:color/transparent"
                android:textDirection="rtl"
                android:inputType="text"
                android:autofillHints="@string/app_name"
                android:hint="عنوان الدرس"
                android:textColor="@color/colorPrimaryDark"
                android:textColorHint="@color/colorPrimary"
                android:textSize="19sp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="4dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="16sp"
                android:text="التاريخ : "
                android:textColor="@color/colorPrimaryDark"
                android:textStyle="bold"
                android:layout_marginTop="12dp"/>
            <EditText
                android:id="@+id/lectureDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@android:color/transparent"
                android:textDirection="rtl"
                android:inputType="text"
                android:autofillHints="@string/app_name"
                android:textColor="@color/colorPrimaryDark"
                android:hint="عنوان الدرس"
                android:textColorHint="@color/colorPrimary"
                android:textSize="19sp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="4dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="51dp"
                android:text="الأيه : "
                android:textColor="@color/colorPrimaryDark"
                android:textSize="16sp"
                android:textStyle="bold" />
            <EditText
                android:id="@+id/quote"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@android:color/transparent"
                android:textDirection="rtl"
                android:inputType="text"
                android:autofillHints="@string/app_name"
                android:textColor="@color/colorPrimaryDark"
                android:hint="عنوان الدرس"
                android:textSize="19sp"
                android:textColorHint="@color/colorPrimary"
                />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="4dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="ملاحظات : "
                android:textColor="@color/colorPrimaryDark"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/lectureNotes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/background__border"
                android:padding="8dp"
                android:textDirection="rtl"
                android:inputType="text"
                android:autofillHints="@string/app_name"
                android:hint="عنوان الدرس"
                android:textSize="19sp"
                android:textColor="@color/colorPrimaryDark"
                android:textColorHint="@color/colorPrimary"
                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left">
            <Button
                android:id="@+id/saveLecture"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginHorizontal="8dp"
                android:layout_marginBottom="18dp"
                android:background="@drawable/background__red_circle"
                android:backgroundTint="@color/colorAccent2"
                android:elevation="8dp"
                android:paddingHorizontal="48dp"
                android:layout_marginTop="12dp"
                android:text="حفظ"
                android:textColor="@color/paletteWhite"
                android:textSize="20sp" />
            </RelativeLayout>
        </LinearLayout>

    </LinearLayout>


</LinearLayout>