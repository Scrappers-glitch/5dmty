<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="480dp"
    android:background="@drawable/radial_dailog"
    android:layoutDirection="rtl">

    <TextView
        android:id="@+id/servantName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/paletteWhite"
        android:text="Servant Name"
        android:textSize="30sp"
        android:gravity="center"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_gravity="center"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/paletteWhite"
            android:text="عدد مرات الحضور :"
            android:textSize="20sp"
            android:gravity="center"
            />
        <TextView
            android:id="@+id/numberOfAbsenceDays"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/paletteWhite"
            android:text="Number of Days"
            android:textSize="20sp"
            android:gravity="center"
            />
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/daysOfAbsenceHolder"
        android:layout_width="400dp"
        android:layout_height="300dp"
        android:layout_marginBottom="10dp"
        />
    <Button
        android:id="@+id/addDay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/radial_dailog"
        android:backgroundTint="@color/colorAccent"
        android:textColor="@color/paletteWhite"
        android:text="+"
        android:textSize="30sp"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"
        />

</LinearLayout>